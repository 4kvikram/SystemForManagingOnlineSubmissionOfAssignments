@model ResponseModel
<h3 class="text-center">Change Your Password</h3>
<h3 class="text-center">@Model.Message</h3>

<form method="post">
    <div class="form-group">
        <label for="OldPassword">Old Password:</label>
        <input type="password" class="form-control" placeholder="Enter Old Password"
               id="OldPassword" required name="OldPassword">
        <small id="OldPasswordValidation" class="text-danger"></small>

    </div>
    <div class="form-group">
        <label for="NewPassword">New Password:</label>
        <input type="password" class="form-control" placeholder="Enter New Password"
               id="NewPassword" required name="NewPassword">
        <small id="OldPasswordValidation" class="text-danger"></small>

    </div>
    <div class="form-group">
        <label for="ConfirmPassword">Confirm Password:</label>
        <input type="password" class="form-control" placeholder="Confirm New Password"
               id="ConfirmPassword" required name="ConfirmPassword">
        <small id="ConfirmPasswordValidation" class="text-danger"></small>

    </div>
    <input type="submit" class="btn btn-primary" value="Submit" />
</form>